<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    andriod:layout_width="match_parent"
    andriod:layout_height="wrap_content">

    <TextView
        andriod:id="@+id/food_name"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_marginStart="8dp"
        andriod:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Green apple" />

    <TextView
        andriod:id="@+id/food_calories"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_marginStart="8dp"
        andriod:layout_marginTop="8dp"
        andriod:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_name"
        tools:text="540 Cal." />

    <ImageView
        andriod:id="@+id/food_image"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/food_name"
        tools:src="@android:drawable/btn_star"
        andriod:contentDescription="TODO" />
</androidx.constraintlayout.widget.ConstraintLayout>
